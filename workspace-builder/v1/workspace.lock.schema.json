{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Workspace Lock Configuration",
	"description": "Lock file that stores the current configuration for a project",
	"type": "object",
	"properties": {
		"$schema": {
			"type": "string",
			"description": "Path to the schema file"
		},
		"projectName": {
			"type": "string",
			"description": "The name of the project type (defines the templates to use)"
		},
		"variantName": {
			"type": "string",
			"description": "The name of the currently in-use variant"
		},
		"injectedProperties": {
			"type": "object",
			"description": "The injected properties (such as answers to prompts, and custom properties)",
			"additionalProperties": {
				"oneOf": [
					{
						"type": "array",
						"description": "Multiline (string) injected property",
						"items": {
							"type": "string",
							"description": "String injected property"
						}
					},
					{
						"type": "string",
						"description": "String injected property"
					},
					{
						"type": "number",
						"description": "Numeric injected property"
					},
					{
						"type": "boolean",
						"description": "Boolean injected property"
					}
				]
			}
		}
	},
	"required": ["projectName", "variantName", "injectedProperties"],
	"additionalProperties": false
}
